{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": "./src/",
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		},
		"target": "ESNext",
		"allowJs": true,
		"checkJs": true,
		"alwaysStrict": true,
		"downlevelIteration": true,
		"noEmitOnError": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"module": "ESNext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"resolveJsonModule": true,
		"declarationMap": false,
		"plugins": [{ "transform": "@zerollup/ts-transform-paths", "exclude": [] }]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", ".*", "*.test.*"]
}
